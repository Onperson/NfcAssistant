<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:src="@drawable/ic_launcher"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_gravity="center"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录卡管家"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_20"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"/>
    <EditText
        android:id="@+id/et_nfc_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_50"
        android:textSize="@dimen/dp_15"
        android:hint="请输入卡管家帐号,默认:admin"
        android:textColorHint="@color/black"/>
    <EditText
        android:id="@+id/et_nfc_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:inputType="textPassword"
        android:textSize="@dimen/dp_15"
        android:hint="请输入卡管家账户密码，默认123456"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10">
        <EditText
            android:id="@+id/et_picture_ems"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@color/white"
            android:inputType="textPassword"
            android:textSize="@dimen/dp_15"
            android:hint="请输入右边的图形验证码"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_ems_picture"
            android:layout_width="@dimen/dp_130"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login_nfc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/bg_login_four_concer_white"
        android:layout_marginTop="@dimen/dp_30"
        android:text="登录"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_23"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"/>
</LinearLayout>